{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>ublue-os/renovate-config:org-inherited-config"
  ],

  "regexManagers": [
    {
      "fileMatch": ["^BREW_VERSION$"],
      "matchStrings": [
        "^(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "Homebrew/brew"
    }
  ]
}
